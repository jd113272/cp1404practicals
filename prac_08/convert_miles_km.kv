BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        TextInput:
            id: user_input
            multiline: False
            size_hint_x: 0.7
            on_text: app.handle_convert()
        BoxLayout:
            orientation: 'vertical'
            size_hint_x: 0.3
            Button:
                text: 'Up'
                on_press: app.handle_increment(1)
            Button:
                on_press: app.handle_increment(-1)
                text: 'Down'
